<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/indigo"
            android:fillViewport="true"
            tools:context="com.byoutline.sampleapplication.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/baseAppCompatActivityButton"
            android:onClick="onClick"
            android:text="Base App Compat Activity Example"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/webVievActivityExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="WebView Activity Example"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/networkChangeReceiverExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="Network Change Example"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/datePickerExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="Date Picker Example"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/roundedExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="Drawable Examples"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/customViewsExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="Custom font views Example"
            style="@style/MainBtnstyle" />

        <Button
            android:id="@+id/dialogExample"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:text="Dialogs Example"
            style="@style/MainBtnstyle" />

    </LinearLayout>

</ScrollView>
